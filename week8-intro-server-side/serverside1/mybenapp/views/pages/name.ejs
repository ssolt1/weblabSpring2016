<!-- views/pages/name.ejs -->

<!DOCTYPE html>
<html>
   <head>
      <!-- call the ejs include command and provide the path to the
               partial to include. Path is relative to this file.
       -->
      <!-- Includer our head.ejs file -->
      <% include ../partials/head %>
      <script type="text/javascript">
         document.cookie = "username=Steve"
      </script>
   </head>
   <body>
      <header>
         <!-- Include the header of the page -->
         <% include ../partials/header %>
      </header>
         <h1>Hello, <%= name %>!</h1>  <!-- escaped value, like echo value in php -->
         <p>
            The word of the day is: <%= word %>.
         </p>
      <footer>
         <% include ../partials/footer %>
      </footer>
   </body>
</html>
