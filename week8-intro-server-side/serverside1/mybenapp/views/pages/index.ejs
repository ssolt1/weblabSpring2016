<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html>
   <head>
      <!-- call the ejs include command and provide the path to the
               partial to include. Path is relative to this file.
       -->
      <!-- Includer our head.ejs file -->
      <% include ../partials/head %>
   </head>
   <body>
      <header>
         <!-- Include the header of the page -->
         <% include ../partials/header %>
      </header>
         <h3><%= tagline %></h3>

         <h4>Friends</h4>
         <% friends.forEach(function(friend) { %>
            <li><%= friend.name %></li>
         <% }); %>
      <footer>
         <% include ../partials/footer %>
      </footer>
   </body>
</html>
